<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sansam.adeye.memberMapper">
  <select id="getTime" resultType="String">
  	select sysdate
  	from dual
  </select>
  
  <!-- 가입하기 -->
  <insert id="insertMember">
  	insert into tbl_member(userid, userpw, username, email)
  	values(#{userid}, #{userpw}, #{username}, #{email})
  </insert>
  
  <!-- 회원가입시 아이디에 대한 정보 가져오기 -->
  <select id="selMember" resultType="com.sansam.adeye.domain.MemberDTO">
  	select * 
  	from tbl_member
  	where userid = #{userid}
  </select>
  
  <!-- 로그인 아이디에 대한 정보 가져오기 -->
  <select id="selLoginInfo" resultType="com.sansam.adeye.domain.MemberDTO">
  	select * 
  	from tbl_member
  	where userid = #{userid}
  	and userpw = #{userpw}
  </select>
  
</mapper>